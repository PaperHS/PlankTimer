<?xml version="1.0" encoding="utf-8"?>

<set xmlns:android="http://schemas.android.com/apk/res/android">
    <scale
        android:fromXScale="0.9"
        android:fromYScale="0.9"
        android:toXScale="1"
        android:toYScale="1"
        android:pivotX="50%"
        android:pivotY="50%"
        android:duration="800"
        />
    <alpha
        android:fromAlpha="1"
        android:toAlpha="0"
        android:duration="800"
        ></alpha>
    <translate
        android:duration="800"
        android:fromXDelta="100%p"
        android:pivotX="50%"
        android:pivotY="50%"
        android:toXDelta="0"
        />
</set>